{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "server/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./scripts/**/*",
    "./*.ts"
  ]
}
